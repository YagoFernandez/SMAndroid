<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="6"
    android:rowCount="2"
    android:padding="2dp">

    <ImageView
        android:id="@+id/imageUrl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingLeft="10dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="6"
        android:layout_columnSpan="6"
        android:layout_rowWeight="2"
        android:layout_rowSpan="2"

        android:src="@drawable/jugador_33x40"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:id="@+id/aviso1"


        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnWeight="2"
        android:layout_columnSpan="2"

        android:src="@drawable/ico_espanol"
        />

    <ImageView
        android:id="@+id/aviso2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnWeight="2"
        android:layout_columnSpan="2"

        android:src="@drawable/ico_lesionado"
        />

    <ImageView
        android:id="@+id/aviso3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_row="1"
        android:layout_column="4"
        android:layout_columnWeight="2"
        android:layout_columnSpan="2"

        android:src="@drawable/ico_masinfo"
        />

</GridLayout>